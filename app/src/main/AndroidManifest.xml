<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weimingfa.androidmusicplay">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/mp.app.name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMusicPlay">

        <activity
            android:name="com.weimingfa.androidmusicplay.music.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/mp.activity.title.file_system"
            android:name="com.weimingfa.androidmusicplay.music.ui.local.filesystem.FileSystemActivity"/>

        <activity
            android:name="com.weimingfa.androidmusicplay.music.ui.details.PlayListDetailsActivity"/>

        <service android:name="com.weimingfa.androidmusicplay.music.player.PlaybackService">
            <intent-filter>
                <action android:name="com.weimingfa.androidmusicplay.music.ACTION.PLAY_TOGGLE"/>
                <action android:name="com.weimingfa.androidmusicplay.music.ACTION.PLAY_NEXT"/>
                <action android:name="com.weimingfa.androidmusicplay.music.ACTION.PLAY_LAST"/>
                <action android:name="com.weimingfa.androidmusicplay.music.ACTION.STOP_SERVICE"/>
            </intent-filter>
        </service>

    </application>

</manifest>